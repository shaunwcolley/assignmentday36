<html lang="en" dir="ltr">
  <head>
    <link rel="stylesheet" href="/css/style.css"/>
    <title>Home</title>
  </head>
  <body>
    <div>
      {{>menu}}
      <div>
      </div>
      <ul>
        {{#posts}}
